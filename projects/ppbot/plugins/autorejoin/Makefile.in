CC=	@cc@

CFLAGS= @cflags@ -O2 -g -I../.. -fPIC
LDFLAGS= @sh_ldflags@

PLUGIN=	autorejoin.so
OBJS=	autorejoin.o

all: $(PLUGIN)

$(PLUGIN): $(OBJS)
	$(CC) $(LDFLAGS) $(OBJS) -o $(PLUGIN)

.c.o:
	$(CC) $(CFLAGS) -o $@ -c $<

clean:
	rm -f $(OBJS) $(PLUGIN)

distclean: clean
	rm -f Makefile
