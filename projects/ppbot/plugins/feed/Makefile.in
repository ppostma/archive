CC=	@cc@
LEX=	@lex@
YACC=	@yacc@

CFLAGS= @sh_cflags@ `xml2-config --cflags` -O2 -g -I../..
LDFLAGS= @sh_ldflags@ `xml2-config --libs`

PLUGIN=	feed.so
OBJS=	feed_config_parse.o feed_config_scan.o feed_connection.o feed_http.o \
	feed_parser.o feed_plugin.o feed_updater.o feed_url.o

all: $(PLUGIN)

$(PLUGIN): $(OBJS)
	$(CC) $(LDFLAGS) $(OBJS) -o $(PLUGIN)

.c.o: feed.h
	$(CC) $(CFLAGS) -o $@ -c $<

feed_config_parse.c: feed_config_parse.y
	$(YACC) -p yyfeed -d -o $@ $<

feed_config_scan.c: feed_config_scan.l
	$(LEX) -Pyyfeed -o$@ $<

clean:
	rm -f feed_config_parse.[ch] feed_config_scan.c $(OBJS) $(PLUGIN)

distclean: clean
	rm -f Makefile
