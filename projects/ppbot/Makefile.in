CC=	@cc@
LEX=	@lex@
YACC=	@yacc@

CFLAGS=	@cflags@ -O2 -g
LDFLAGS= @ldflags@
LIBS=	@libs@

PROG=	ppbot
OBJS=	channel.o config_parse.o config_scan.o connection.o ircbot.o \
	log.o message.o mqueue.o plugin.o timer.o xalloc.o \
	@objs@

all: $(PROG)

$(PROG): $(OBJS)
	$(CC) $(LDFLAGS) $(OBJS) -o $(PROG) $(LIBS)

.c.o: ircbot.h timer.h
	$(CC) $(CFLAGS) -o $@ -c $<

config_parse.c: config_parse.y
	$(YACC) -o $@ -d $<

config_scan.c: config_scan.l
	$(LEX) -o$@ $<

clean:
	rm -f config_parse.[ch] config_scan.c $(OBJS) $(PROG) $(PROG).core core

distclean: clean
	rm -f Makefile config.log
