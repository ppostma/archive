CC=	@cc@

CFLAGS=	@cflags@ -O2 -g
LDFLAGS= @ldflags@
LIBS=	@libs@

INSTALL= @install@
PREFIX= @prefix@

PROG=	chklinks
OBJS=	chklinks.o connection.o ftp.o http.o url.o urlcheck.o xalloc.o \
	@objs@
MAN=	chklinks.1

all: $(PROG)

$(PROG): $(OBJS)
	$(CC) $(LDFLAGS) $(OBJS) -o $(PROG) $(LIBS)

.c.o: chklinks.h
	$(CC) $(CFLAGS) -o $@ -c $<

install: $(PROG)
	[ -d $(PREFIX)/bin ] || mkdir -p $(PREFIX)/bin
	$(INSTALL) $(PROG) $(PREFIX)/bin/$(PROG)
	[ -d $(PREFIX)/share/man/man1 ] || mkdir -p $(PREFIX)/share/man/man1
	$(INSTALL) $(MAN) $(PREFIX)/share/man/man1/$(MAN)

clean:
	rm -f $(OBJS) $(PROG) $(PROG).core core

distclean: clean
	rm -f Makefile config.log
